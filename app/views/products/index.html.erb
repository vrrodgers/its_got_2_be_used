<!-- Page Header-->
<section class="module-page-title">
    <div class="container">
        <div class="row-page-title">
            <div class="page-title-captions">
                <h1 class="h5">Checkout</h1>
            </div>
            <div class="page-title-secondary">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item"><a href="#">Shop</a></li>
                    <li class="breadcrumb-item active">Checkout</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<!-- Page Header end-->

<!-- Shop cart-->
<section class="module">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="table-responsive">
                        <table class="table cart-table">
                            <thead>
                                <tr>
                                    <th class="col-remove"></th>
                                    <th class="col-thumbnail"></th>
                                    <th class="col-title">Product</th>
                                    <th class="col-price">Price</th>
                                    <th class="col-quantity">Quantity</th>
                                    <th class="col-subtotal">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="cart-remove"><a href="#"> <%= link_to fa_icon('trash')%></a></td>
                                    <td><a href="#"><img class="cart-thumbnail" src="http://placehold.it/626x800" alt=""></a></td>
                                    <td>
                                        <h6 class="m-b-5"><a href="#">Mandarin collar shirt</a></h6>
                                    </td>
                                    <td>$20.00
                                    </td>
                                    <td>
                                        <input class="form-control" type="number" step="1" min="1" value="1">
                                    </td>
                                    <td>$20.00
                                    </td>
                                </tr>
                                <tr>
                                    <td class="cart-remove"><a href="#"><%= link_to fa_icon('trash')%></a></td>
                                    <td><a href="#"><img class="cart-thumbnail" src="http://placehold.it/626x800" alt=""></a></td>
                                    <td>
                                        <h6 class="m-b-5"><a href="#">White carrot fit jeans</a></h6>
                                    </td>
                                    <td>$30.00
                                    </td>
                                    <td>
                                        <input class="form-control" type="number" step="1" min="1" value="1">
                                    </td>
                                    <td>$30.00
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="coupon">
                        <div class="row">
                            <div class="col-md-4">
                                <input class="form-control" type="text" placeholder="Coupon Code">
                            </div>
                            <div class="col-md-4"><a class="btn btn-round btn-gray" href="#">Apply Coupon</a></div>
                            <div class="col-md-4">
                                <div class="text-right"><a class="btn btn-round btn-gray" href="#">Update Cart</a></div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="row m-t-70">
            <div class="col-md-6 ml-auto">
                <table class="table cart-table">
                    <tbody>
                        <tr>
                            <td>Subtotal</td>
                            <td class="text-right">$21.00</td>
                        </tr>
                        <tr>
                            <td>Discount</td>
                            <td class="text-right">$1.00</td>
                        </tr>
                        <tr>
                            <td>Total</td>
                            <td class="text-right">$20.00</td>
                        </tr>
                    </tbody>
                </table>
                <div class="text-right"><a class="btn btn-round btn-dark" href="#">Proceed to Checkout</a></div>
            </div>
        </div>
    </div>
</section>
<!-- Shop cart end-->